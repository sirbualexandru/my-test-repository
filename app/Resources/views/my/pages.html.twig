{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <h2>The pages</h2>
  
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Index</th>
        <th>Name</th>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        {% for page in pages %}
        <tr>
	        <td>{{ page.id }}</td>
	        <td>{{ page.pageName }}</td>
	        <td>{{ page.pageTitle }}</td>
	        <td><a href="/my/page/{{ page.id }}" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-triangle-right"></i></a></td>

      	</tr>
    	{% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
